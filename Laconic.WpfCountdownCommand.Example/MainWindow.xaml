<Window x:Class="Laconic.WpfCountdownCommand.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="525">
    <StackPanel>
        <Button Content="Start the countdown" Margin="20,20,20,0" Command="{Binding CountdownCommand}"/>
        <TextBlock Margin="20,20,20,0" Foreground="Red" FontSize="32" TextAlignment="Center" Text="{Binding SecondsCounterText}"/>
        <TextBlock Margin="20,20,20,0" Foreground="DarkGreen" FontSize="32" TextAlignment="Center" Text="{Binding ResultText}"/>
    </StackPanel>
</Window>
